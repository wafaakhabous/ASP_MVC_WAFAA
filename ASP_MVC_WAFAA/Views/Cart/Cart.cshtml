</head>
<header class="header_section">
    <div class="container">
        <nav class="navbar navbar-expand-lg custom_nav-container ">
            <a class="navbar-brand" href="index.html">
                <img src="images/logo.png" alt="">
                <span>
                    Style
                </span>
            </a>
            <div class="d-flex   flex-column flex-lg-row  ">
                <ul class="navbar-nav  ">
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Potteries" asp-action="Index">Home </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Potteries" asp-action="Create"> Add Product </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Cart" asp-action="Cart"> Cart </a>
                    </li>
                    <li class="nav-item">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a a class="nav-link" asp-controller="Account" asp-action="Logout">Logout</a>
                        }
                    </li>
                </ul>
            </div>
        </nav>
    </div>

</header>

